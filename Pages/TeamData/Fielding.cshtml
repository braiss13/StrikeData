@page
@model StrikeData.Pages.TeamData.FieldingModel
@{
    ViewData["Title"] = "Fielding Stats";
}

<h1 class="page-title">Fielding Stats</h1>

<!-- Selector desplegable para filtrar por tipo de estadÃ­stica -->
<form method="get" class="table-selector">
    <label for="statDropdown" class="dropdown-label">Select a stat type:</label>
    <select id="statDropdown" name="SelectedStatTypeId" class="dropdown" onchange="this.form.submit()">
        <option value="" selected="@(Model.SelectedStatTypeId == null)">-- All --</option>
        @foreach (var statType in Model.StatTypes)
        {
            <option value="@statType.Id" selected="@(Model.SelectedStatTypeId == statType.Id)">
                @statType.Name
            </option>
        }
    </select>
</form>


<!-- Tabla con los datos de TeamStats -->
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Team</th>
            <th>Games</th>
            <th>Season</th>
            <th>Last 3</th>
            <th>Last 1</th>
            <th>Home</th>
            <th>Away</th>
            <th>Previous</th>
        </tr>
    </thead>
    <tbody>
        @{
            var index = 1;
            foreach (var stat in Model.TeamStats)
            {
                <tr>
                    <td>@index</td>
                    <td>@stat.Team.Name</td>
                    <td>@(stat.Team.Games ?? 0)</td>
                    <td>@stat.CurrentSeason</td>
                    <td>@(stat.Last3Games ?? 0)</td>
                    <td>@(stat.LastGame ?? 0)</td>
                    <td>@(stat.Home ?? 0)</td>
                    <td>@(stat.Away ?? 0)</td>
                    <td>@(stat.PrevSeason ?? 0)</td>
                </tr>
                index++;
            }
        }
    </tbody>
</table>
