@page
@model StrikeData.Pages.TeamData.FieldingModel

@{
    ViewData["Title"] = "Fielding Stats";
}

<h2 class="section-title">Fielding Stats</h2>

<!-- Desplegable de selección de tipo de estadística con estilo consistente -->
<form method="get">
    <div class="table-selector">
        <select id="statSelect"
                asp-for="SelectedStatTypeId"
                asp-items="Model.StatOptions"
                class="form-select w-auto d-inline-block"
                style="background-color:#1e3a8a;
                       color:#ffffff;
                       border:1px solid #2563eb;
                       border-radius:0.25rem;
                       padding:0.4rem 0.8rem;
                       margin-bottom: 1rem;"
                onchange="this.form.submit(); updateStatDesc();">
        </select>
    </div>
</form>

<!-- Área para mostrar la explicación de la estadística seleccionada -->
<p id="statDescription" class="stat-desc" style="margin-left: 10px; color: #93c5fd;"></p>

<!-- Tabla de estadísticas de fildeo por equipo -->
<table class="table table-striped table-bordered table-sm pitching-table" style="margin: 1 auto;">
    <thead>
        <tr>
            <th>#</th>
            <th>Team</th>
            <th>Games</th>
            <th>Season</th>
            <th>Last 3</th>
            <th>Last 1</th>
            <th>Home</th>
            <th>Away</th>
            <th>Previous</th>
        </tr>
    </thead>
    <tbody>
        @{
            var index = 1;
            if (Model.TeamStats != null && Model.TeamStats.Count > 0)
            {
                foreach (var stat in Model.TeamStats)
                {
                    <tr>
                        <td>@index</td>
                        <td>@stat.Team.Name</td>
                        <td>@(stat.Team.Games ?? 0)</td>
                        <td>@stat.CurrentSeason</td>
                        <td>@(stat.Last3Games ?? 0)</td>
                        <td>@(stat.LastGame ?? 0)</td>
                        <td>@(stat.Home ?? 0)</td>
                        <td>@(stat.Away ?? 0)</td>
                        <td>@(stat.PrevSeason ?? 0)</td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="9" style="text-align:center;">No data available</td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- Script para actualizar la explicación de la estadística seleccionada -->
<script>
(function () {
    // Diccionario de descripciones generado desde el modelo
    const descriptions = {
        @foreach (var kvp in Model.StatDescriptions)
        {
            <text>'@kvp.Key': "@kvp.Value.Replace("\"", "\\\"")",</text>
        }
    };

    window.updateStatDesc = function () {
        var select = document.getElementById('statSelect');
        var descEl = document.getElementById('statDescription');
        var val = select.value;
        descEl.innerText = descriptions[val] || "";
    };

    document.addEventListener('DOMContentLoaded', function () {
        updateStatDesc();
    });
})();
</script>
