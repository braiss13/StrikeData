@page
@model StrikeData.Pages.TeamData.WinTrendsModel

@{
    ViewData["Title"] = "Win Trends";
}

<h2 class="section-title">Win Trends</h2>

@* Filter form: stat type selector. Triggers GET on change to refresh the table. *@
<form method="get">
    <div class="table-selector">
        <select asp-for="SelectedStatType"
                asp-items="Model.StatTypeOptions"
                class="form-select w-auto d-inline-block"
                style="background-color:#1e3a8a; 
                       color:#ffffff; 
                       border:1px solid #2563eb; 
                       border-radius:0.25rem; 
                       padding:0.4rem 0.8rem;
                       margin-bottom: 1rem;"
                onchange="this.form.submit()">
        </select>
    </div>
</form>

@* Results grid: one row per team for the selected trend (Perspective=Team). *@
<table class="table table-striped sortable-table table-bordered table-sm pitching-table"
       style="margin: 1 auto;">
    <thead>
        <tr>
            <th data-sortable data-type="number">#</th>
            <th data-sortable data-type="string">Team</th>
            <th>Win-Loss Record</th>
            <th data-sortable data-type="number">Win %</th>
        </tr>
    </thead>
    <tbody>
    @{
        var index = 1;
        foreach (var r in Model.Rows)
        {
            <tr>
                <td>@index</td>
                <td>@r.TeamName</td>
                <td>@r.WinLossRecord</td>
                <td>@(r.WinPct.HasValue ? r.WinPct.Value.ToString("0.00") + "%" : "-")</td>
            </tr>
            index++;
        }
    }
    </tbody>
</table>
