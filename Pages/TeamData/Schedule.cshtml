@page
@model StrikeData.Pages.TeamData.ScheduleModel

@{
    ViewData["Title"] = "Team Schedule";
}

<h2 class="section-title">Team Schedule</h2>

<form method="get">
    <!-- Team selector: styled and centered. Submits on change to reload page data. -->
    <div class="table-selector">
        <select asp-for="SelectedTeamId"
                asp-items="Model.TeamOptions"
                class="form-select w-auto d-inline-block"
                style="background-color:#1e3a8a; 
                       color:#ffffff; 
                       border:1px solid #2563eb; 
                       border-radius:0.25rem; 
                       padding:0.4rem 0.8rem;
                       margin-bottom: 1rem;"
                onchange="this.form.submit()">
        </select>
    </div>

    <!-- View mode toggles: "expanded" (per-game) vs "summarized" (split tables). -->
    <div class="table-selector mb-3">
        <button type="submit"
                name="ViewMode"
                value="expanded"
                class="btn-stat-toggle @(Model.ViewMode == "expanded" ? "" : "inactive")">
            Expanded
        </button>
        <button type="submit"
                name="ViewMode"
                value="summarized"
                class="btn-stat-toggle @(Model.ViewMode == "summarized" ? "" : "inactive")">
            Summarized
        </button>
    </div>
</form>

@* =========================
   Expanded: per-game table
   ========================= *@
@if (Model.ViewMode == "expanded")
{
    <!-- The header cells declare data-sortable and data-type for generic JS sorting.
         Dates are rendered as "yyyy-MM-dd" to align with the sorter's strict date parser. -->
    <table class="table table-striped sortable-table table-bordered table-sm pitching-table"
           style="margin: 1 auto;">
        <thead>
            <tr>
                <th data-sortable data-type="number">Game</th>
                <th data-sortable data-type="date">Date</th>
                <th data-sortable data-type="string">Opponent</th>
                <th>Score</th>
                <th data-sortable data-type="string">Decision</th>
                <th>Record</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var game in Model.Schedule)
        {
            <tr>
                <td>@game.GameNumber</td>
                <td>@game.Date.ToString("yyyy-MM-dd")</td>
                <td>@($"{(game.IsHome ? "vs" : "at")} {game.OpponentName}")</td>
                <td>@game.Score</td>
                <td>@game.Decision</td>
                <td>@game.Record</td>
            </tr>
        }
        </tbody>
    </table>
}
@* =========================
   Summarized: split tables
   ========================= *@
else
{
    <!-- Monthly Splits: one row per calendar month with win% formatted to 3 decimals. -->
    <div class="mb-4" style="max-width: 80%; margin: 0 auto;">
        <h4 class="table-subtitle">Monthly Splits</h4>
        <table class="table table-striped sortable-table table-bordered table-sm pitching-table">
            <thead>
                <tr>
                    <th data-sortable data-type="string">Month</th>
                    <th data-sortable data-type="number">Games</th>
                    <th data-sortable data-type="number">Wins</th>
                    <th data-sortable data-type="number">Losses</th>
                    <th data-sortable data-type="number">Win %</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var ms in Model.MonthlySplits)
            {
                <tr>
                    <td>@ms.Month</td>
                    <td>@ms.Games</td>
                    <td>@ms.Wins</td>
                    <td>@ms.Losses</td>
                    <td>@ms.WinPercentage.ToString("0.000")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    <!-- Team vs Team Splits: aggregated performance against each opponent. -->
    <div class="mb-4" style="max-width: 80%; margin: 0 auto;">
        <h4 class="table-subtitle">Team vs Team Splits</h4>
        <table class="table table-striped sortable-table table-bordered table-sm pitching-table">
            <thead>
                <tr>
                    <th data-sortable data-type="string">Opponent</th>
                    <th data-sortable data-type="number">Games</th>
                    <th data-sortable data-type="number">Wins</th>
                    <th data-sortable data-type="number">Losses</th>
                    <th data-sortable data-type="number">Win %</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var ts in Model.TeamSplits)
            {
                <tr>
                    <td>@ts.OpponentName</td>
                    <td>@ts.Games</td>
                    <td>@ts.Wins</td>
                    <td>@ts.Losses</td>
                    <td>@ts.WinPercentage.ToString("0.000")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
