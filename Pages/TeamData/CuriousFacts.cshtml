@page
@model StrikeData.Pages.TeamData.CuriousFactsModel

@{
    ViewData["Title"] = "Curious Facts";
}

<h2 class="section-title">Curious Facts</h2>

<form method="get">
    <!-- Desplegable del tipo de estadística -->
    <div class="table-selector">
        <select id="statSelect"
                asp-for="SelectedStatType"
                asp-items="Model.StatTypeOptions"
                class="form-select w-auto d-inline-block"
                style="background-color:#1e3a8a; 
                       color:#ffffff; 
                       border:1px solid #2563eb; 
                       border-radius:0.25rem; 
                       padding:0.4rem 0.8rem;
                       margin-bottom: 1rem;"
                onchange="this.form.submit(); updateStatDesc();">
        </select>
    </div>

    <!-- Selector de perspectiva: Team / Opp (solo una tabla, cambia según selección) -->
    <div class="table-selector mb-3">
        <button type="submit"
                name="Perspective"
                value="team"
                class="btn-stat-toggle @(Model.Perspective == "team" ? "" : "inactive")">
            Team Itself
        </button>
        <button type="submit"
                name="Perspective"
                value="opp"
                class="btn-stat-toggle @(Model.Perspective == "opp" ? "" : "inactive")">
            Their Opponents
        </button>
    </div>
</form>

<!-- Área para mostrar la explicación de la estadística seleccionada -->
<p id="statDescription" class="stat-desc" style="margin-left: 10px; color: #93c5fd;"></p>

<!-- Tabla única de resultados -->
<table class="table table-striped table-bordered table-sm pitching-table"
       style="margin: 1 auto;">
    <thead>
        <tr>
            <th>#</th>
            <th>Team</th>
            <th>Season</th>
            <th>Last 3</th>
            <th>Last 1</th>
            <th>Home</th>
            <th>Away</th>
            <th>Previous Season</th>
        </tr>
    </thead>
    <tbody>
    
    @{
        var index = 1;
        foreach (var r in Model.Rows)
        {
            <tr>
                <td>@index</td>
                <td>@r.TeamName</td>
                <td>@(r.CurrentSeason?.ToString("0.00") ?? "-")</td>
                <td>@(r.Last3Games?.ToString("0.00") ?? "-")</td>
                <td>@(r.LastGame?.ToString("0.00") ?? "-")</td>
                <td>@(r.Home?.ToString("0.00") ?? "-")</td>
                <td>@(r.Away?.ToString("0.00") ?? "-")</td>
                <td>@(r.PrevSeason?.ToString("0.00") ?? "-")</td>
            </tr>
            index++;
        }
        
    }
    </tbody>
</table>

<!-- Script para actualizar la explicación de la estadística seleccionada -->
<script>
(function () {
    // Diccionario de descripciones generado desde el modelo
    const descriptions = {
        @foreach (var kvp in Model.StatDescriptions)
        {
            <text>'@kvp.Key': "@kvp.Value.Replace("\"", "\\\"")",</text>
        }
    };

    // Perspectiva legible para anexar a la explicación
    const perspective = "@Model.Perspective" === "opp" ? "Opponents" : "Team Itself";

    window.updateStatDesc = function () {
        var select = document.getElementById('statSelect');
        var descEl = document.getElementById('statDescription');
        var val = select.value;
        var base = descriptions[val] || "";
        descEl.innerText = base ? (base + " — Perspective: " + perspective) : "";
    };

    document.addEventListener('DOMContentLoaded', function () {
        updateStatDesc();
    });
})();
</script>
