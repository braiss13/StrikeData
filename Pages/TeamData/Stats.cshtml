@page
@model StrikeData.Pages.TeamData.StatsModel
@{
    ViewData["Title"] = "Stats";
}

<h1 class="page-title">Team Stats</h1>

<table class="table">
    <thead>
        <tr>
            <th>Team</th>
            <th>Runs/Game</th>
            <th>Hits/Game</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model.Teams)
        {
            <tr>
                <td>@team.Name</td>
            </tr>
        }
    </tbody>
</table>
